# Variables d'environnement pour Futsal GPS Tracker sur Render
# Copiez ce fichier en .env et modifiez les valeurs

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this
DEBUG=False

# Server Configuration
PORT=10000
HOST=0.0.0.0

# Upload Configuration
MAX_UPLOAD_SIZE=100  # MB
UPLOAD_FOLDER=/tmp/uploads
RESULTS_FOLDER=/tmp/results
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv

# Model Configuration
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5

# Field Dimensions
FIELD_LENGTH=40.0
FIELD_WIDTH=20.0

# Processing
PROCESS_EVERY_N_FRAMES=10  # Process every 10 frames for performance
MAX_TRACKING_DISTANCE=2.0

# Optional: Cloud Storage (S3)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET=futsal-tracker-uploads

# Optional: Cloudinary (alternative storage)
CLOUDINARY_URL=cloudinary://your-api-key:your-api-secret@your-cloud-name

# Optional: Database (PostgreSQL sur Render)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Optional: Redis (pour cache)
REDIS_URL=redis://default:password@host:port

# Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (optionnel)
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000
